{
  "name": "github-output-issues-and-discussions-fetcher",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Yoshiyuki Nakano",
    "url": "https://github.com/drumnistnakano"
  },
  "scripts": {
    "start": "npx tsx",
    "cli": "npm run start ./main.ts",
    "prepare": "husky",
    "check:spell": "cspell '**/*.{ts,tsx,yml}' --cache --gitignore",
    "check": "run-p check:*k",
    "fix": "run-p fix:*",
    "fix:code": "biome lint --write --no-errors-on-unmatched ./",
    "fix:format": "biome format --write --no-errors-on-unmatched ./",
    "check:code": "biome lint ./",
    "check:style": "biome format ./",
    "check:tsc": "tsc --noEmit",
    "sort": "sort-package-json"
  },
  "lint-staged": {
    "**/package.json": [
      "bash -c 'npm run sort'"
    ],
    "photo-album/**/*": [
      "bash -c 'npm run check'",
      "bash -c 'npm run fix'",
      "bash -c 'npm run check:spell'"
    ]
  },
  "dependencies": {
    "@octokit/rest": "21.0.1",
    "fs-extra": "11.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@inquirer/prompts": "5.1.3",
    "@types/node": "20.14.11",
    "cspell": "8.11.0",
    "dotenv": "16.4.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "npm-run-all": "4.1.5",
    "sort-package-json": "2.10.0",
    "tsx": "4.16.2"
  },
  "engines": {
    "node": "20.15.1",
    "npm": ">= 10.x"
  },
  "volta": {
    "node": "20.15.1",
    "npm": "10.8.2"
  }
}
